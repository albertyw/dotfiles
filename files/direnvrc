# vi:syntax=bash:

WORKON_HOME=~/.virtualenvs

# Add a .envrc of the form
# layout virtualenv <env dir>
layout_virtualenv() {
  local venv_path="$1"
  source ${venv_path}/bin/activate
}

# Add a .envrc of the form
# layout virtualenvwrapper <virtualenv name>
layout_virtualenvwrapper() {
  local venv_path="${WORKON_HOME}/$1"
  layout_virtualenv $venv_path
}
