# Core
[core]
  editor = vi
  excludesfile = ~/.gitignore
  templatedir = ~/.git
  trustctime = false
  precomposeunicode = false

[init]
  templatedir = ~/.git

[user]
  name = Albert Wang
  email = albertyw@mit.edu

  
# Git command Configuration
[grep]
  linenumber = true

[push]
  default = current

[alias]
  lg   = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  todo = grep -n -e TODO -e FIXME -e XXX -e OPTIMIZE -e FIX-ME
  logf = log --follow
  size = count-objects -vH
  loc  = !git diff --stat `git hash-object -t tree /dev/null` | tail -1 | cut -d' ' -f5
  userstats = !gitstats.sh
  pygrep = !git grep $1 -- `git ls-files | grep -v migrations | grep py`
  cherrypick = cherry-pick
  blame = blame -cwC
  branches = branch -vv
  find = !git ls-files | grep

[log]
  date = local
  
# Branching/Merging
[branch]
  autosetuprebase = always

[diff]
  tool = vimdiff
  compactionHeuristic = true
  renames = copies

[difftool]
  prompt = false

[help]
  autocorrect = 1

[merge]
  conflictstyle = diff3
  log = true
  
# Colors
[color]
  ui = true

[color "grep"]
  filename = magenta
  match = bold red
  linenumber = bold blue

[color "diff"]
  meta = bold cyan

[include]
  # REQUIRES GIT 1.7.10+
  path = .gitconfig_local

[rerere]
  enabled = true

[submodule]
  # Requires git 2.9.0+
  fetchJobs = 0
