{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(cat *)",
      "Bash(diff *)",
      "Bash(du *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(head *)",
      "Bash(ls *)",
      "Bash(ollama ps*)",
      "Bash(pwd)",
      "Bash(tail *)",
      "Bash(test *)",
      "Bash(tree *)",
      "Bash(wc *)",
      "Bash(which *)",
      "WebFetch"
    ],
    "deny": [
      "Read(./.env**)",
      "Bash(git commit *)",
      "Bash(git push *)"
    ],
    "defaultMode": "default"
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "printf \"\\a\" > /dev/tty"
          }
        ]
      }
    ]
  }
}
